<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/pi"
        style="@style/darkerButton"
        android:background="@drawable/calculator_button"
        android:text="nopi"
        app:layout_constraintBottom_toTopOf="@+id/clear"
        app:layout_constraintEnd_toStartOf="@+id/number4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/devision"
        style="@style/darkerButton"
        android:background="@drawable/calculator_button"
        android:text="÷"
        app:layout_constraintBottom_toTopOf="@+id/pi"
        app:layout_constraintEnd_toStartOf="@+id/number7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.99"/>

    <Button
        android:id="@+id/number7"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@+id/devision"
        app:layout_constraintEnd_toStartOf="@+id/number8"
        app:layout_constraintStart_toEndOf="@+id/devision"
        app:layout_constraintTop_toTopOf="@+id/devision" />

    <Button
        android:id="@+id/number8"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/number7"
        app:layout_constraintEnd_toStartOf="@+id/number9"
        app:layout_constraintStart_toEndOf="@+id/number7"
        app:layout_constraintTop_toTopOf="@+id/number7" />

    <Button
        android:id="@+id/multiply"
        style="@style/importantButton"
        android:layout_marginStart="48dp"
        android:background="@drawable/calculator_button"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="@+id/number9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/number9"
        app:layout_constraintTop_toTopOf="@+id/number9" />

    <Button
        android:id="@+id/number9"
        style="@style/calculatorButton"
        android:layout_marginStart="12dp"
        android:background="@drawable/calculator_button"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@+id/number8"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintStart_toEndOf="@+id/number8"
        app:layout_constraintTop_toTopOf="@+id/number8" />

    <Button
        android:id="@+id/number4"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/pi"
        app:layout_constraintEnd_toStartOf="@+id/number5"
        app:layout_constraintStart_toEndOf="@+id/pi"
        app:layout_constraintTop_toTopOf="@+id/pi" />

    <Button
        android:id="@+id/number5"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/number4"
        app:layout_constraintEnd_toStartOf="@+id/number6"
        app:layout_constraintStart_toEndOf="@+id/number4"
        app:layout_constraintTop_toTopOf="@+id/number4" />

    <Button
        android:id="@+id/number6"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@+id/number5"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@+id/number5"
        app:layout_constraintTop_toTopOf="@+id/number5" />

    <Button
        android:id="@+id/minus"
        style="@style/importantButton"
        android:background="@drawable/calculator_button"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/number6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/number6"
        app:layout_constraintTop_toTopOf="@+id/number6" />

    <Button
        android:id="@+id/clear"
        style="@style/specialButton"
        android:background="@drawable/calculator_button"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/number1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.99"/>

    <Button
        android:id="@+id/button0"
        style="@style/calculatorButton"
        android:layout_marginStart="42dp"
        android:background="@drawable/calculator_button"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/comma"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <Button
        android:id="@+id/number1"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/clear"
        app:layout_constraintEnd_toStartOf="@+id/number2"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toTopOf="@+id/clear" />

    <Button
        android:id="@+id/number2"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/number1"
        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintStart_toEndOf="@+id/number1"
        app:layout_constraintTop_toTopOf="@+id/number1" />

    <Button
        android:id="@+id/equals"
        style="@style/importantButton"
        android:layout_marginStart="76dp"
        android:background="@drawable/calculator_button"
        android:text="="
        app:layout_constraintBottom_toBottomOf="@+id/negative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/negative"
        app:layout_constraintTop_toTopOf="@+id/negative" />

    <Button
        android:id="@+id/number3"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/number2"
        app:layout_constraintEnd_toStartOf="@+id/sum"
        app:layout_constraintStart_toEndOf="@+id/number2"
        app:layout_constraintTop_toTopOf="@+id/number2" />

    <Button
        android:id="@+id/back"
        style="@style/specialButton"
        android:background="@drawable/calculator_button"
        android:text="←"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.99"/>

    <Button
        android:id="@+id/comma"
        style="@style/calculatorButton"
        android:layout_marginStart="8dp"
        android:background="@drawable/calculator_button"
        android:text=","
        app:layout_constraintBottom_toBottomOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/negative"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toTopOf="@+id/button0" />

    <Button
        android:id="@+id/negative"
        style="@style/calculatorButton"
        android:background="@drawable/calculator_button"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/comma"
        app:layout_constraintEnd_toStartOf="@+id/equals"
        app:layout_constraintStart_toEndOf="@+id/comma"
        app:layout_constraintTop_toTopOf="@+id/comma" />

    <Button
        android:id="@+id/sum"
        style="@style/importantButton"
        android:background="@drawable/calculator_button"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/number3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/number3"
        app:layout_constraintTop_toTopOf="@+id/number3" />

    <TextView
        android:id="@+id/equation"
        android:layout_width="391dp"
        android:layout_height="82dp"
        android:gravity="center|right"
        android:text=""
        android:textColor="@color/button_color"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

</androidx.constraintlayout.widget.ConstraintLayout>